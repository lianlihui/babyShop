.page-my-top {
  width: 100%;
  height: 260rpx;
  position: relative;
}
.page-my-top-bg {
  width: 100%;
  height: 260rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.page-my-top-lf,
.page-my-top-rt {
  margin-top: 56rpx;
  display: inline-block;
  vertical-align: middle;
  color: #fff;
}
.page-my-top-lf {
  width: 145rpx;
  height: 145rpx;
  margin-left: 28rpx;
  margin-right: 20rpx;
  background: #ccc;
  border-radius: 100%;
  border: 2px solid #fff;
}
.page-my-top-img {
  width: 145rpx;
  height: 145rpx;
  border-radius: 100%;
}
.page-my-top-name {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  line-height: 1;
  color: #fff;
}
.page-my-top-score {
  line-height: 1;
  font-size: 36rpx;
  color: #fffc05;
}
.page-my-top-right-score {
  width: 176rpx;
  height: 56rpx;
  line-height: 56rpx;
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -28rpx;
  background: #ffd818;
  color: #fff;
  font-size: 28rpx;
  border-top-left-radius: 28rpx;
  border-bottom-left-radius: 28rpx;
  text-align: center;
}

