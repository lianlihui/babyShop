.search-wrap {
  padding: 1px;
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #ebebeb;
  box-sizing: border-box;
  -webkit-sizing: border-box;
}

.search-box {
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 28rpx 20rpx;
  text-align: center;
  background: #fff;
  border-radius: 30rpx;
  border: 1rpx solid #fb92a5;
}
.search-img {
  display:inline-block;
  vertical-align: middle;
  width: 28rpx;
  margin-right: 25rpx;
}
.search-text {
  font-size: 30rpx;
  color: #8d9299;
}
.search-box-inp{
  width:570rpx;
  margin:0rpx auto;
  font-size: 30rpx;
  display: inline-block;
}
.search-box-qd{
  height: 60rpx;
  line-height: 60rpx;
  width: 80rpx;
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  display: inline-block;
  background: #eeeeee;
  border: 1px solid #ebebeb;
  font-size: 28rpx;
  text-align: center;
  color: #414141;
  border-radius: 0.25rem;
}
.search-key {
  padding: 0px 20rpx;
  width: 100%;
}
.search-key-title{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #414141;
}
.search-key-tag{
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  background: #eeeeee;
  border: 1px solid #ebebeb;
  font-size: 28rpx;
  text-align: center;
  color: #414141;
  border-radius: 0.25rem;
  float: left;
  margin-top:20rpx;
  margin-right:20rpx;
  padding:0rpx 20rpx;
}
.recommend-box {
  width: 100%;
  overflow: hidden;
}
.product-list {
  overflow: hidden;
  margin-right: -1px;
}
.product-list-item {
  width: 50%;
  float: left;
  padding: 23rpx 15rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-right: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
}
.product-desc {
  font-size: 28rpx;
  color: #414141;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.product-image {
  width: 345rpx;
  height: 345rpx;
  margin: 0 auto;
}
.product-price span {
  font-size: 36rpx;
  color: #ff4965;
}
.del-price {
  font-size: 28rpx;
  color: #585858;
  display: inline-block;
  margin-left: 26rpx;
  position: relative;
}
.del-price span {
  width: 100%;
  height: 1px;
  background: #585858;
  position: absolute;
  top: 50%;
  left: 0;
}
.product-price {
  font-size: 28rpx;
  color: #585858;
}
.loading-status {
  margin: 20rpx auto;
  text-align: center;
  color: #333;
  font-size: 24rpx;
}
.product-empty {
  margin: 50rpx 0;
  font-size: 30rpx;
  text-align: center;
}
.product-empty.hide {
  display: none;
}
.product-empty.show {
  display: block;
}