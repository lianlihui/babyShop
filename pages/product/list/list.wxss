.search-wrap {
  position: absolute;
  width: 180rpx;
  height: 90rpx;
  z-index: 11;
  display: block;
  background: #fff;
}
.search-img {
  width: 125rpx;
  height: 83rpx;
  margin: 4rpx 27rpx;
}

.category-tab-box {
  width: 100%;
  padding-left: 200rpx;
  height: 90rpx;
  border-bottom: 1px solid #d8d8d8;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
  z-index:10;
}
.category-tab {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #d8ted8d8;
  display: inline-block;
  vertical-align: middle;
  font-size: 36rpx;
  color: #414141;
  margin: -1px 80rpx 0 80rpx;
}
.category-tab.active {
  border-bottom: 1px solid #ff4965;
}
.category-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: -webkit-box;
  top: 0;
  left: 0
}

.category-wrap {
  width: 180rpx;
  height: calc(100% - 91rpx);
  background: #f4f4f4;
  position: absolute;
  left: 0;
  top: 91rpx;
  overflow-y: scroll;
  padding-bottom:20rpx;
  box-sizing:border-box;
}

.category {
  display: block;
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  line-height: 110rpx;
  color: #414141;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d8d8d8;
  border-left: 1px solid #f4f4f4;
  background: #f4f4f4;
}
.category.active {
  background: #fff;
  border-left: 1px solid #ff4965;
}

.menu-wrap {
  -webkit-box-flex: 1;
  height: calc(100% - 91rpx);
  overflow-y: scroll;
  margin-left: 180rpx;
  margin-top: 91rpx;
}

.product-list {
  padding: 0 25rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  overflow: hidden;
  margin-right: -1px;
}
.product-list-item {
  width: 100%;
  padding: 0 30rpx;
  margin: 30rpx 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
  background: #fff;
}
.product-image {
  width: 160rpx;
  height: 160rpx;
  display: block;
}
.product-list-item-ct {
  padding-left: 20rpx;
  -webkit-box-flex: 1.0;
          box-flex: 1.0;
}
.product-desc {
  font-size: 24rpx;
  color: #414141;
  margin-bottom: 20rpx;
  /*width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;*/
  text-align: left;
}
.product-item-price {
  font-size: 30rpx;
}
.product-price-strong {
  color: #ff4965;
}
.loading-status {
  margin: 20rpx auto;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  clear: both;
}
.product-empty {
  margin: 50rpx 0;
  font-size: 30rpx;
  text-align: center;
}
.product-empty.hide {
  display: none;
}
.product-empty.show {
  display: block;
}