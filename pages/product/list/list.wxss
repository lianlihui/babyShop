.search-wrap {
  padding: 1px;
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #ebebeb;
}

.search-box {
  width: 600rpx;
  height: 60rpx;
  margin: 28rpx auto;
  text-align: center;
  background: #fff;
  border-radius: 30rpx;
  border: 1rpx solid #fb92a5;
}
.search-img {
  display:inline-block;
  vertical-align: middle;
  width: 28rpx;
  margin-right: 25rpx;
}
.search-text {
  font-size: 30rpx;
  color: #8d9299;
}

.product-list {
  overflow: hidden;
  margin-right: -1px;
}
.product-list-item {
  width: 50%;
  float: left;
  padding: 23rpx 15rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-right: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
}
.product-desc {
  font-size: 28rpx;
  color: #414141;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.product-price span {
  font-size: 36rpx;
  color: #ff4965;
}
.del-price {
  font-size: 28rpx;
  color: #585858;
  display: inline-block;
  margin-left: 26rpx;
  position: relative;
}
.del-price span {
  width: 100%;
  height: 1px;
  background: #585858;
  position: absolute;
  top: 50%;
  left: 0;
}
.product-price {
  font-size: 28rpx;
  color: #585858;
}