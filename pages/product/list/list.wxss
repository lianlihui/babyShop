.search-wrap {
  padding: 1px;
  width: 100%;
  height: 120rpx;
  border-bottom: 30rpx solid #f4f4f4;
  position: relative;
  z-index: 10;
}

.search-box {
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 28rpx auto;
  text-align: center;
  background: #fff;
  border-radius: 30rpx;
  border: 1rpx solid #fb92a5;
}
.search-img {
  display:inline-block;
  vertical-align: middle;
  width: 28rpx;
  margin-right: 25rpx;
}
.search-text {
  font-size: 30rpx;
  color: #8d9299;
}

.category-content {
  position: fixed;
  width: 100%;
  height: 100%;
  display: -webkit-box;
  top: 0;
  left: 0
}

.category-wrap {
  width: 180rpx;
  height: calc(100% - 151rpx);
  background: #f4f4f4;
  position: absolute;
  left: 0;
  top: 151rpx;
  overflow-y: scroll;
  padding-bottom:20rpx;
  box-sizing:border-box;
}

.category {
  display: block;
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  line-height: 110rpx;
  color: #414141;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d8d8d8;
  background: #f4f4f4;
}
.category.active {
  background: #fff;
}

.menu-wrap {
  -webkit-box-flex: 1;
  height: calc(100% - 151rpx);
  overflow-y: scroll;
  margin-left: 180rpx;
  margin-top: 151rpx;
}

.product-list {
  padding: 0 25rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  overflow: hidden;
  margin-right: -1px;
}
.product-list-item {
  width: 33%;
  float: left;
  margin-top: 32rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.product-image {
  width: 136rpx;
  height: 136rpx;
  display: block;
  margin: 0 auto;
}
.product-desc {
  font-size: 28rpx;
  color: #414141;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  text-align: center;
}
.product-price span {
  font-size: 36rpx;
  color: #ff4965;
}
.del-price {
  font-size: 28rpx;
  color: #585858;
  display: inline-block;
  margin-left: 26rpx;
  position: relative;
}
.del-price span {
  width: 100%;
  height: 1px;
  background: #585858;
  position: absolute;
  top: 50%;
  left: 0;
}
.product-price {
  font-size: 28rpx;
  color: #585858;
}
.loading-status {
  margin: 20rpx auto;
  text-align: center;
  color: #333;
  font-size: 24rpx;
}
.product-empty {
  margin: 50rpx 0;
  font-size: 30rpx;
  text-align: center;
}
.product-empty.hide {
  display: none;
}
.product-empty.show {
  display: block;
}