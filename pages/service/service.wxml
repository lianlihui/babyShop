    <image src="/images/service/kf.png" class="service-icon" mode="widthFix"/> 
    <text>客服热线</text>
    <text class="service-style" data-sysphone="{{sysphone}}" bindtap="phone">{{sysphone}}</text>
  </view>

  <view class="service-item">
    <image src="/images/service/wx.png" class="service-icon" mode="widthFix"/>
    <text>客服微信</text>
    <text class="service-style" data-wxno="{{sywx}}" bindtap="copywxno">{{sywx}}</text>
  </view>

  <view class="service-item">
    <image src="/images/service/em.png" class="service-icon" mode="widthFix"/>
    <text>客服email</text>
    <text class="service-style" data-wxno="{{sysemail}}" bindtap="copywxno">{{sysemail}}</text>
  </view>

