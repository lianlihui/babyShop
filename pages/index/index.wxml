<!--index.wxml-->
<view class="container">

  <!--start banner -->
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}">
    <block wx:for="{{imgUrls}}" wx:key="unique">
      <navigator url="{{item.url}}">
      <swiper-item>
        <image src="{{imageRootPath}}{{item.linkurl}}" class="slide-image" mode="widthFix"/>
      </swiper-item>
      </navigator>
    </block>
  </swiper>

  <!-- start 搜索 -->
  <view class="search-box">
      <image src="/images/index/search.png" class="search-img" mode="widthFix"/>
      <span class="search-text">宝宝服饰</span>
  </view>

  <!-- 为你推荐 -->
  <view class="recommend-box">
    <view class="recommend-title">
      <image src="/images/index/index_rec.png" class="recommend-img" mode="widthFix"/>
    </view>

     <!-- 为你推荐列表 -->
    <view class="product-list">
      <view class="product-list-item" wx:for="{{warelist}}" wx:for-item="item1" wx:key="unique1">
        <navigator url="/pages/product/info/info?id=130">
          <image src="{{imageRootPath}}{{item1.pic1}}" mode="widthFix"/>
          <view class="product-desc">{{item1.name}}</view>
          <view class="product-price"><span>¥{{item1.price}}</span><view class="del-price">押金：¥{{item1.rent_cost}}</view></view>
        </navigator>
      </view>
    </view>
  </view>

</view>
