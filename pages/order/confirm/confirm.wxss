.order{
  width:100%;
  height: 100%;
  background: #f4f4f4;
}
.address-wrap{
  width: 100%;
  position: relative;
  padding: 20rpx 25rpx;
  background:#fff;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
  display:-webkit-box;
}
.address-left{
  width:34rpx;
  height:75rpx;
  margin-right:30rpx;
  overflow:hidden;
  background:#fff;
}
.address-icon{
  width: 34rpx;
  height: 46rpx;
  margin-top: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.address-right{
  position: relative;
  -webkit-box-flex: 1.0;
}
.address-accept{
  font-size: 36rpx;
  color: #414141;
  margin-bottom: 10rpx;
  position: relative;
}
.address-name{
  display: inline-block;
}
.address-phone{
  display: inline-block;
  position: absolute;
  right: 0rpx;
}
.address-info{
  display: inline-block;
  line-height: 1.3;
  font-size: 28rpx;
  color: #414141;
}
.order-wrap{
  margin-top: 25rpx;
  margin-bottom: 111rpx;
}
.order-list-item-dzf-bd{
  padding:20rpx 27rpx;
  background:#fff;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  border-top: 1rpx #ebebeb solid;
  position: relative;
}
.order-list-item-dzf-bd .item-left{
  width:215rpx;
  height:215rpx;
  margin-right:20rpx;
  overflow:hidden;
  background:#fff;
}
.order-list-item-dzf-bd .item-img{
  width:215rpx;
  height:215rpx;
}
.order-list-item-dzf-bd .item-right{
  position: relative;
  -webkit-box-flex: 1.0;
}
.order-list-item-dzf-bd .item-title{
  line-height: 1.3;
  color: #414141;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  display: block;
}

.order-list-item-dzf-bd .item-day{
  color: #7b7b7b;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: block;
}
.order-list-item-dzf-bd .item-price{
  color: #ff4965;
  font-size: 36rpx;
  display: block;
}

.order-list-item-foot{
  border-top: 1rpx #ebebeb solid;
  padding: 0rpx 27rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  position: relative;
  background: #ffffff;
}
.order-list-item-foot .left-tag{
  color: #7b7b7b;
  display: inline-block;
  margin-left: 45rpx;
}
.order-list-item-foot .right-tag{
  color: #7b7b7b;
  display: inline-block;
  position: absolute;
  right: 27rpx;
}
.item-price-red{
  color: #f2506d !important;
}
.item-nobordertop{
  border-top:none !important;
}
.orderno-icon{
  width: 32rpx;
  height: 60rpx;
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 30rpx;
  position: absolute;
  top: 51%;
  margin-top: -30rpx;
}
.orderno-icon.active {
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 30rpx;
}

.order-remark{
  margin-top:20rpx; 
  width:100%;
  padding-top:20rpx;
  background: #ffffff;
}
.order-remark-textarea{
  height: 172rpx;
  font-size: 24rpx;
  color: #333;
  width:100%;
  margin-top:2rpx;
  border-top: 1px solid #d6d6d6;
  border-bottom: 1px solid #d6d6d6;
  padding:10rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.order-list-item-dzf-foot{
  height: 110rpx;
  line-height: 110rpx;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  right: 0rpx;
  border-top: 1rpx #ebebeb solid;
  z-index:1;
  background: #ffffff;
}
.btn-qx{
  text-align: center;
  width:245rpx;
  line-height: 110rpx;
  height: 110rpx;
  background: #ff4965;
  font-size: 42rpx;
  color: #ffffff;
  display: block;
  float: right;
  border-radius: 0rpx;
}
.all-btn-com{
  margin-top:28rpx;
  width:210rpx;
  line-height: 60rpx;
  height: 60rpx;
  background: #ffffff;
  font-size: 30rpx;
  display: block;
  float: right;
  border-radius: 100rpx;
}
.btn-zf{
  color: #f2506d;
  border: 1px #f2506d solid;
}
/**添加按钮样式**/
.address-btn{
  width: 100%;
  border-bottom: 1rpx #ebebeb solid;
  padding:25rpx 0rpx;
  background: #ffffff;
}
.address-btn-impl{
  width:586rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #ffffff;
  font-size: 42rpx;
  color: #ff4965;
  border: 1rpx #ff4965 solid;
  border-radius: 100rpx;
}