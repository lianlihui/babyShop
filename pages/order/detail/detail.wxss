.order{
  width:100%;
  background: #f4f4f4;
}
.address-wrap{
  width: 100%;
  position: relative;
  padding: 20rpx 25rpx;
  background:#fff;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
  display:-webkit-box;
}
.address-left{
  width:34rpx;
  height:75rpx;
  margin-right:30rpx;
  overflow:hidden;
  background:#fff;
}
.address-icon{
  width: 34rpx;
  height: 46rpx;
  margin-top: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.address-right{
  position: relative;
  -webkit-box-flex: 1.0;
}
.address-accept{
  font-size: 36rpx;
  color: #414141;
  margin-bottom: 10rpx;
  position: relative;
}
.address-name{
  display: inline-block;
}
.address-phone{
  display: inline-block;
  position: absolute;
  right: 0rpx;
}
.address-info{
  display: inline-block;
  line-height: 1.3;
  font-size: 28rpx;
  color: #414141;
}

.order-wrap{
  margin-top: 25rpx;
}
.order-list-item-dzf-head{
  padding: 0rpx 27rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  position: relative;
  background: #ffffff;
}
.order-list-item-dzf-head .orderno-tag{
  color: #7b7b7b;
  display: inline-block;
}
.order-list-item-dzf-head .orderno-imp{
  color: #7b7b7b;
  display: inline-block;
  margin-left:30rpx; 
}
.order-list-item-dzf-head .money{
  color: #ff4965;
  display: inline-block;
  margin-left:30rpx;
}
.order-list-item-dzf-bd{
  padding:30rpx 27rpx;
  background:#fff;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  border-top: 1rpx #ebebeb solid;
  position: relative;
}
.order-list-item-dzf-bd .item-left{
  width:160rpx;
  height:160rpx;
  margin-right:30rpx;
  overflow:hidden;
  background:#fff;
}
.order-list-item-dzf-bd .item-img{
  width:160rpx;
  height:160rpx;
}
.order-list-item-dzf-bd .item-right{
  position: relative;
  -webkit-box-flex: 1.0;
}
.order-list-item-dzf-bd .item-title{
  line-height: 1.3;
  color: #414141;
  font-size: 28rpx;
  margin-bottom: 25rpx;
  display: block;
}

.order-list-item-dzf-bd .item-day{
  color: #7b7b7b;
  font-size: 28rpx;
  margin-bottom: 5rpx;
  display: block;
}
.order-list-item-dzf-bd .item-price{
  color: #f2506d;
  font-size: 36rpx;
  display: block;
}

.order-list-item-foot{
  border-top: 1rpx #ebebeb solid;
  padding: 0rpx 27rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  position: relative;
  background: #ffffff;
}
.order-list-item-foot .left-tag{
  color: #7b7b7b;
  display: inline-block;
}
.order-list-item-foot .right-tag{
  color: #7b7b7b;
  display: inline-block;
  position: absolute;
  right: 27rpx;
}
.item-price-red{
  color: #f2506d !important;
}

.all-btn-com{
  margin-top: 35rpx;
  width:210rpx;
  line-height: 60rpx;
  height: 60rpx;
  background: #ffffff;
  font-size: 30rpx;
  display: block;
  float: right;
  border-radius: 100rpx;
}
.order-list-item-all-foot{
  border-top: 1rpx #ebebeb solid;
  background: #ffffff;
  height: 128rpx;
  padding:0rpx 27rpx;
}
.btn-qx{
  color: #7b7b7b;
  border: 1px #7b7b7b solid;
  margin-right: 45rpx;
}
.btn-zf{
  color: #f2506d;
  border: 1px #f2506d solid;
}