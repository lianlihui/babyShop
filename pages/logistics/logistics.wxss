/**index.wxss**/
.container {
  padding-bottom: 20rpx;
}
.page-top {
  width: 100%;
  height: 140rpx;
  position: relative;
  background: #ff4663;
  color: #fff;
  border-bottom: 30rpx solid #f4f4f4;
}
.page-top-bg {
  width: 100%;
  height: 260rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.page-top-lf,
.page-top-rt {
  margin-top: 19rpx;
  display: inline-block;
  vertical-align: middle;
  color: #fff;
}
.page-top-lf {
  width: 102rpx;
  height: 102rpx;
  margin-left: 25rpx;
  margin-right: 20rpx;
}
.page-top-img {
  width: 102rpx;
  height: 102rpx;
  border-radius: 10rpx;
}
.page-top-name {
  font-size: 36rpx;
  margin-bottom: 16rpx;
  line-height: 1;
  color: #fff;
}
.page-top-num {
  font-size: 28rpx;
  color: #fff;
}
.section-title {
  margin-left: 25rpx;
  height: 94rpx;
  line-height: 94rpx;
  color: #282828;
  font-size: 36rpx;
  border-bottom: 1px solid #ebebeb;
}
.section-box {
  display: -webkit-box;
  padding: 30rpx 0 30rpx 25rpx;
  border-bottom: 30rpx solid #f4f4f4;
  font-size: 28rpx;
  color: #7b7b7b;
}
.section-lf {
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
}
.section-img {
  width: 128rpx;
}
.section-ct,
.section-rt {
  -webkit-box-flex: 1.0;
          box-flex: 1.0;
}
.section-ct {
  padding: 0 25rpx;
}
.section-rt {
  padding-right: 25rpx;
  text-align: right;
}
.section-price {
  color: #414141;
  line-height: 1.5;
}
.section-name {
  line-height: 1.5;
  margin-bottom: 30rpx;
}