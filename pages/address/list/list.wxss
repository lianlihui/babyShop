.address{
  width:100%;
  height: 100%;
  background-color: #fff;
}
.address-list{
  width:100%;
}
.address-item{
  padding:10rpx 27rpx 20rpx 27rpx;
  width:100%;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
  position: relative;
  border-bottom: 1px solid #ebebeb;
}
.address-item-lf {
  width: 100%;
  display: table;
  vertical-align: middle;
}
.address-item-icon{
  width: 72rpx;
  height: 110rpx;
  display: none;
  background: url(data:image/png;base64,) no-repeat center center;
  background-size: 30rpx;
}
.address-item-icon.show {
  display: table-cell;
}
.address-item-icon.active {
  background: url(data:image/png;base64,) no-repeat center center;
  background-size: 30rpx;
}
.address-item-content-contact{
  font-size: 36rpx;
  color: #414141;
  height: 82rpx;
  line-height: 82rpx;
  position: relative;
}
.address-item-content-contact .phone{
  margin-left: 45rpx;
}
.address-item-content-contact .arrow{
  width: 13rpx;
  height: 25rpx;
  position: absolute;
  top: 32rpx;
  right: 0rpx;
}
.address-item-content-address{
  font-size: 28rpx;
  color: #7b7b7b;
  display: inline-block;
  vertical-align: middle;
}
.address-item-content-address .defaut{
  color: #ff4965;
}
.address-item-eidt{
  width:92rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #08a1f9;
  text-align: center;
  margin-left: 37rpx;
  position: absolute;
  top: 50%;
  margin-top: -35rpx;
  right: 0;
  border-left: 1px solid #d5d5d5;
}
.address-btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  border-top: 1rpx #ebebeb solid;
  padding-top:30rpx;
  margin-bottom:30rpx;
}
.address-btn-impl{
  width:586rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff4965;
  font-size: 42rpx;
  color: #ffffff;
  border-radius: 100rpx;
}
.address-btn-add-icon{
  width: 21rpx;
  height: 19rpx;
  margin-top: -10rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 30rpx;
}
.address-btn-impl span {
  margin-right: 10rpx;
}