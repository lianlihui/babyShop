.address{
  width: 100%;
  height: 100%;
}

.addrss-edit{
  width:100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}

.addrss-edit-item{
  width:100%;
  padding-left:27rpx;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
}

.addrss-edit-item-impl{
  border-bottom: 1rpx solid #f0f0f0;
  padding: 32rpx 0;
  position: relative;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
}

.addrss-edit-item-text{
  font-size: 32rpx;
  color: #4a4a4a;
  position:absolute;
  top:50%;
  margin-top: -21rpx;
  left: 0;
}
.addrss-edit-item-inp{
  font-size: 32rpx;
  color: #333;
  margin-left:190rpx;
  /*height: 28rpx;
  line-height: 28rpx;*/
}

.addrss-edit-item-area{
  font-size: 32rpx;
  color: #333;
  margin-left:185rpx;
  height: 28rpx;
  line-height: 28rpx;
}

.address-edit-item-picker{
  display:inline-block;
  margin-left:150rpx;
  font-size: 24rpx;
  color: #333;
}
.addrss-edit-item-xtext{
  font-size: 32rpx;
  color: #333333;
  position:absolute;
  top:32rpx;
  left: 0;
}
.addrss-edit-item-textarea{
  height: 20rpx;
  padding: 0rpx;
  font-size: 32rpx;
  color: #333;
  margin-left:190rpx;
  width:520rpx;
}
.addrss-edit-item-implm{
  border-bottom: 1rpx solid #f0f0f0;
  padding: 32rpx 0;
  position: relative;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
}
.addrss-edit-item-mtext{
  font-size: 32rpx;
  color: #333333;
  display: inline-block;
  vertical-align: middle;
}
.addrss-edit-item-icon {
  width: 44rpx;
  height: 44rpx;
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 44rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 20rpx;
}
.addrss-edit-item-icon.active {
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 44rpx;
}

.address-add-btn{
  width: 100%;
  margin-top:70rpx;
  background:#fff;
}
.address-add-impl,
.addrss-edit-delete {
  width:586rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff4965;
  font-size: 42rpx;
  color: #ffffff;
  border-radius: 100rpx;
  margin-bottom: 20rpx;
}
.addrss-edit-delete {
  margin-top: 30rpx;
  background: #ccc;
  color: #333;
}